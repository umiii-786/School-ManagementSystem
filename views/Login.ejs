<!DOCTYPE html>
<!-- Created By CodingNepal -->
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/CSS/login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <style>
        .error-label{
            font-size: 12px;
            color: rgb(255, 36, 36);
            margin: 10px 0px;
            text-align: left;
        }
    </style>
</head>

<body>
    <div class="content">
        <%- include('includes/alerts') %>
        <div class="text">
            Login...!
        </div>
        <form action="/login" method="post" class="loginForm">
            <div class="field">
                <input type="number" name="cnic" placeholder="Enter Cnic">
                <span class="fas fa-user"></span>
           
                <label class="error-label"></label>
            </div>
            <div class="field">
                <input type="password" name="password" placeholder="Enter Password">
                <span class="fas fa-lock"></span>
                
                <label class="error-label"></label>
            </div>
            <div class="forgot-pass">
                <a href="#">Forgot Password?</a>
            </div>
            <button type="button" class="login_button">Login</button>
           
        </form>
    </div>
    <script>

    document.querySelector('.login_button').addEventListener('click',validateLogin)
    
    function validateLogin(){
        let inputs=document.getElementsByTagName('input')
        let errorlabel=document.querySelectorAll('.error-label')
        let check=true
        for (let i = 0; i < inputs.length; i++) {
            console.log(inputs[i])
            if(inputs[i].value==""){
                errorlabel[i].innerHTML="Field Should not be Empty"
                check=false;
            }
        }
        if(check) document.querySelector('.loginForm').submit()
    }
    </script>
</body>

</html>