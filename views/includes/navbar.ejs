    .notification {
        width: 41px;
        height: 41px;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        cursor: pointer;
        transition-duration: .3s;
        background: var(----box-shadow-color);
        box-shadow: var(--notificationShadow-color);
        border: none;
        margin-right: 10px;
    }

    .bell {
        width: 18px;
    }

    .bell path {
        fill: var(--text-color);
    }

    cation:hover {
        background-color: rgb(56, 56, 56);
    }

    .notification:hover .bell {
        animation: bellRing 0.9s both;
    }

    /* bell ringing animation keyframes*/
    @keyframes bellRing {

        0%,
        100% {
            transform-origin: top;
        }

        15% {
            transform: rotateZ(10deg);
        }

        30% {
            transform: rotateZ(-10deg);
        }

        45% {
            transform: rotateZ(5deg);
        }

        60% {
            transform: rotateZ(-5deg);
        }

        75% {
            transform: rotateZ(2deg);
        }
    }

    .notification:active {
        transform: scale(0.8);
    }

    /* Container for Logout Button */
