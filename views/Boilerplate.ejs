<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        .container {
            width: 100%;
            display: flex;
            min-height: 100vh;
        }

        .main_section {

            width: 85%;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-bottom: 20px;
        }

        input[type="number"].no-spinners::-webkit-outer-spin-button,
        input[type="number"].no-spinners::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        input[type="number"].no-spinners {
            -moz-appearance: textfield;
        }
    </style>

    <style>
        @media screen and (max-width:940px) {
            .sidebar {
                position: absolute;
               left: -1000px;
               z-index: 10;
            }

            .main_section {
                width: 100%;
            }
        }
    </style>
</head>

<body>

    <div class="container">

        <%- include('includes/sidebar') %>
            <div class="main_section">
                <%- include('includes/navbar') %>
                    <%- include('includes/alerts') %>
                        <%- body -%>
            </div>

    </div>
    <script>

        document.querySelector('.sidebarBurgur').addEventListener('click', (event) => {
            const rightElement = document.querySelector('.sidebar')
            let element_style = window.getComputedStyle(rightElement)
            console.log(element_style.left)
           if (element_style.left == '-1000px') {
            console.log('condition satisfied')
                rightElement.style.left = '0px'
            }
            else {
                rightElement.style.left = '-1000px'
            }
        })
        
    </script>
    <script src="https://kit.fontawesome.com/a4fa4ff0b8.js" crossorigin="anonymous"></script>
</body>

</html>