<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/CSS/studentCss/studentedit.css">
    
</head>

<body>
    <%- include('../includes/navbar.ejs') %>
    <div class="container">
        <div class="card user-card">
                <%- include('../includes/alerts.ejs') %>
                <span id="purpose" style="visibility: none;">edit</span>
                <h6 class="Info_message_popup"></h6>
                <div class="headerSection">
                    <!-- <div class="profile-details text-center">
                       
                    </div> -->
                    <div class="profile-section">

                        <div class="img">
                            <img src="<%= data.profileImg %>" alt="User Profile" class="profile-img">
                        </div>
                        <h4 class="tagname">
                            <%= data.identity.Role %>
                        </h4>
                        <h3 class="subheading">Department :<%= data.department.department_name %></h3>
                        <h4 class="subheading section_name">Batch : <%= data.batch %> </h4>
                        

                    </div>
                    <!-- </div> -->
                    <h1 class="h1">Let's Make Changes</h1>
                </div>
                <form class="info-section registerForm" action="/student/<%= data.id %>?_method=PUT" method="post">
                    <div class="info">
                        <h6>Information</h6>
                        <div class="info-row">
                            <div>
                                <p>Name</p>
                                <h6 class="fieldContainer"><input type="text" class="controls inputs" name="username"
                                        value="<%= data.username %>">
                                    <label class="error-label"></label>
                                </h6>
                            </div>
                            <div>
                                <p>Gender</p>
                                <h6 class="fieldContainer"><select name="gender" id="roleOptions"
                                        class="controls inputs" value="<%= data.gender %>">
                                        <option>Male</option>
                                        <option>Female</option>
                                        <option>Custom</option>
                                    </select>
                                    <label class="error-label"></label>
                                </h6>
                            </div>
                        </div>
                        <div class="info-row">
                            <div>
                                <p>Father</p>
                                <h6 class="fieldContainer"> <input type="text" class="controls inputs"
                                        name="father_name" value="<%= data.father_name %>">
                                    <label class="error-label"></label>
                                </h6>
                            </div>
                            <div>
                                <p>Date Of Birth</p>
                                <h6 class="fieldContainer"><input type="date" class="controls inputs" name="DOB"
                                        value="<%= data.DOB %>">
                                    <label class="error-label"></label>
                                </h6>
                            </div>
                        </div>
                        <div class="info-row">
                            <div>
                                <p>Cnic</p>
                                <h6 class="fieldContainer"><input type="number" id="cnic" class="controls inputs" name="cnic"
                                        value="<%= data.identity.cnic %>">
                                    <label class="error-label"></label>
                                </h6>
                            </div>
                            <div>
                                <p>Phone</p>
                                <h6 class="fieldContainer"><input type="number" class="controls inputs" name="phone"
                                        value="0<%= data.phone %>">
                                    <label class="error-label"></label>
                                </h6>
                            </div>
                        </div>
                        <div class="info-row">
                            <div>
                                <p>rollno</p>
                                <h6 class="fieldContainer"> <input type="number" class="controls inputs" name="rollno"
                                        value="<%= data.rollno %>">
                                    <label class="error-label"></label>
                                </h6>
                            </div>

                            <input type="text" style="display: none;" name="department" value="<%= data.department %>">
                            <input type="text" style="display: none;" name="batch" value="<%= data.batch %>">
                        </div>

                    </div>
                    <button class="submit" type="button" onclick="validateForm()">Confirm</button>
                </form>
            </div>
        </div>

        <script src="/JS/AddForm.js"></script>
</body>

</html>