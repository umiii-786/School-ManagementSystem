<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/CSS/studentCss/addstudent.css">

</head>

<body>
    <% layout('boilerplate') -%>
        <div class="content theme">
            <h6 class="Info_message_popup"></h6>
            <span id="purpose" style="visibility: hidden;"></span>
            <div class="text">
                <h1>
                    Student Information
                </h1>
                <img src="../../images/studentslogorm.png" alt="student">
            </div>
            <form action="/student" method="post" class="registerForm">
                <div class="field  flex_property">
                    <h4 class="lbl">Name</h4>
                    <input type="text" class="controls" name="username">
                    <label class="error-label"></label>

                </div>

                <div class="field flex_property">
                    <h4 class="lbl">Father Name</h4>
                    <input type="text" class="controls" name="father_name">
                    <label class="error-label"></label>

                </div>

                <div class="field flex_property">
                    <h4 class="lbl">Cnic</h4>
                    <input type="number" class="controls no-spinners" name="cnic" id="cnic">
                    <label class="error-label"></label>

                </div>

                <div class="field flex_property">
                    <h4 class="lbl">Phone</h4>
                    <input type="number" class="controls no-spinners" name="phone">
                    <label class="error-label"></label>

                </div>

               <div class="selectboxes field flex_property">
                    <h4 class="lbl">Gender</h4>
                    <select name="gender" id="roleOptions" class="controls">
                        <option>Male</option>
                        <option>Female</option>
                        <option>Custom</option>
                    </select>
                    <label class="error-label"></label>
                </div>

                <div class="selectboxes field flex_property ">
                    <h4 class="lbl">Date of Birth</h4>
                    <input type="date" class="controls" name="DOB">
                    <label class="error-label"></label>
                </div>




                <div class="selectboxes field flex_property">
                    <h4 class="lbl">Department</h4>
                    <select name="department" id="selectboxes_Options" class="controls">
                        <% for( let i=0; i < departments.length; i++ ) { %>
                            <option>
                                <%= departments[i].department_name %>
                            </option>

                            <% } %>
                    </select>
                    <label class="error-label"></label>
                </div>

                 <div class="selectboxes field flex_property">
                    <h4 class="lbl">Choose Batch</h4>
                    <select name="batch" id="selectboxes_Options" class="controls">
                        <option>2022</option>
                        <option>2023</option>
                        <option>2024</option>
                        <option>2025</option>
                    </select>
                    <label class="error-label"></label>
                </div>

                 <div class="selectboxes field flex_property">
                    <h4 class="lbl">Roll no</h4>
                    <input type="number" class="controls" name="rollno">
                    <label class="error-label"></label>
                </div>

                <div class="selectboxes field flex_property">
                    <h4 class="lbl">Set Password</h4>
                    <input type="password" class="controls" name="password">
                    <label class="error-label"></label>
                </div>
                <button onclick="validateForm()" type="button" class="btns registerbtn">Add</button>
            </form>
        </div>
        <!-- <h1></h1> -->
<script>
   
</script>
     <!-- <script src="../../JS/preservedData.js"></script> -->
        <script src="/JS/AddForm.js"></script>
</body>

</html>